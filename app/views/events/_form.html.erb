<%= form_with model: @event, action: "events" do |form| %>
  <% if flash[:event_errors] %>
    <div class="error">
      <ul>
        <% flash[:event_errors].each do |error| %>
          <li><%= error %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title, "Event Title:" %>
    <%= form.text_field :title, class: "event_form_title" %>
  </div>
  <div class="field">
  <%= form.label :location, "Location:" %>
    <%= form.text_field :location, class: "event_form_location" %>
  </div>
  <div class="field">
    <%= form.label :date, "Date:" %>
    <%= form.datetime_select :date, class: "event_form_title" %>
  </div>

  <div class="">
    <%= form.submit "Create", class: "event_submit" %>
  </div>
<% end %>

